@model RavenDB_Embedded.Models.YeuCauMuaSach
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "YeuCauMuaSach";
}

<h2>YeuCauMuaSach</h2>


<hr />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="YeuCauMuaSach">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaDG" class="control-label"></label>
                <input asp-for="MaDG" class="form-control" value='@HttpContextAccessor.HttpContext.Session.GetString("DocGia").Replace("\"", "").Replace("\"", "")' readonly />
                <span asp-validation-for="MaDG" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenSach" class="control-label"></label>
                <input asp-for="TenSach" class="form-control" />
                <span asp-validation-for="TenSach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaCN" class="control-label"></label>
                <select asp-for="MaCN" class="form-control">
                    @{ 
                        List<ChiNhanh> cns = RavenDBHelper.ListChiNhanh();
                        foreach (ChiNhanh cn in cns)
                        {
                            <option value="@cn.MaChiNhanh ">@cn.TenChiNhanh</option>
                        }
                    }
                </select>                
                <span asp-validation-for="MaCN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Yêu cầu" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

